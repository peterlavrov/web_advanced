include ./mixins.pug

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    title Portfolio | main page
  body
    .wrapper
      .welcome-section
        section.hero
          .container.hero__container
            header.hero__header
              .hero__logo
                .logo ПЛ
              .hero__menu
                - var menu = ["Главная", "Обо мне", "Навыки", "Работы", "Отзывы", "Связаться"];
                nav.menu
                  ul.menu__items
                    each item in menu
                      li.menu__item
                        a.menu__link #{item}
              .hero__links
                - var icons = ["insta", "vk", "github"]
                ul.socials
                  each item in icons
                    li.socials__item
                      a.socials__link(href="#")
                        +icon(item, "socials__icon")
            .hero__content
              .user-info
                .user-info__desc Личный сайт веб разработчика
                .user-info__username  Лавров Петр
            .hero__buttons
              a.scroll-btn Скролл
        section.about
          .container.about__container
            .about__left
              .user
                .user__avatar
                  .avatar
                    +image("content/user.jpg", "user pic", "avatar__image")
                .user__text
                  - 
                    var rows = [
                      ["Проживаю:", "Торецк"],
                      ["Возраст:", "27 лет"],
                      ["Родился:", "21 мая"]
                    ];

                  table.user__data
                    each row in rows
                      tr.user__data-row
                        each cell in row
                          td #{cell}
            .about__right
              .about__welcome-text
              .about__username
              .about__desc Lorem ipsum dolor sit amet consectetur adipisicing elit. Aspernatur cum nemo, vel natus provident id rerum eum cupiditate amet voluptatibus repellendus deleniti velit iure sit, obcaecati distinctio impedit dicta commodi?
              .about__ps