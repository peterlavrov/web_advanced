.skills {
  display: flex;

  &__circle {
    fill: transparent;
    width: 100%;
    height: 100%;
    max-height: 200px;
    max-width: 200px;
  }

  &__item {
    margin-right: 2%;
    &:last-child {
      margin-right: 0;
    }
  }

  &-row__title {
    font-size: 24px;
    line-height: 48px;
    font-weight: 700;
    color: $text-color;
  }
}

.skill {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  width: 100%;
  height: auto;
  max-width: 180px;
  &__title {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    opacity: 0.5;
    font-size: 18px;
    font-weight: 700;
    color: $text-color;
    text-align: center;
  }
}

.circle {
  &__above {
    stroke: url(#gradient);
    stroke-width: 20;
    stroke-dashoffset: 160px;
    stroke-dasharray: 471px;
  }

  &__under {
    stroke: $creamy;
    stroke-width: 8;
  }
}
