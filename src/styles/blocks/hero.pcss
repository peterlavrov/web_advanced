.hero {
  height: 100vh;
  min-height: 650px;

  &__container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
  }
  &__header {
    display: flex;
    justify-content: space-between;
  }

  &__menu {
    margin: 0 90px;
  }

  &__content {
    display: flex;
    justify-content: center;
  }

  &__buttons {
    display: flex;
    justify-content: center;
  }
}
